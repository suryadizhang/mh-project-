{
  "name": "myhibachi-workspace",
  "version": "1.0.0",
  "description": "MyHibachi - Full-Stack Booking System with Payments and AI",
  "private": true,
  "author": "MyHibachi Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/suryadizhang/mh-project-.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:customer": "cd apps/customer && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:api": "cd apps/api && python -m uvicorn main:app --reload --port 8000",
    "dev:ai-api": "cd apps/ai-api && python main.py",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:customer\"",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:customer\" \"npm run dev:admin\" \"npm run dev:ai-api\"",
    "build": "npm run build --workspaces --if-present",
    "build:customer": "cd apps/customer && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "start": "npm run start:customer",
    "start:customer": "cd apps/customer && npm start",
    "start:admin": "cd apps/admin && npm start",
    "lint": "npm run lint --workspaces --if-present",
    "lint:api": "cd apps/api && ruff check . && black --check .",
    "lint:ai-api": "cd apps/ai-api && ruff check . && black --check .",
    "format": "npm run format --workspaces --if-present",
    "format:api": "cd apps/api && black . && isort .",
    "format:ai-api": "cd apps/ai-api && black . && isort .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:api": "cd apps/api && pytest",
    "test:ai-api": "cd apps/ai-api && pytest",
    "test:e2e": "npx playwright test",
    "clean": "rm -rf node_modules && npm run clean --workspaces --if-present",
    "check": "npm run typecheck && npm run lint && npm run test",
    "docker:build": "docker build -t myhibachi:latest .",
    "codegen": "npm run codegen:api",
    "codegen:api": "scripts/generate-api-client.bat",
    "codegen:watch": "npm run codegen:api -- --watch",
    "setup": "npm install && npm run codegen",
    "postinstall:disabled": "npm run codegen:api",
    "prepare": "[ -n \"$CI\" ] || [ -n \"$VERCEL\" ] || husky install || true",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "critters": "^0.0.23",
    "husky": "^8.0.3",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "python": ">=3.11.0"
  },
  "keywords": [
    "hibachi",
    "catering",
    "booking-system",
    "nextjs",
    "fastapi",
    "stripe",
    "payments",
    "restaurant",
    "scheduling"
  ],
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "tailwind-merge": "^3.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --cache-location .eslintcache --fix --max-warnings=0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.py": [
      "ruff check --fix --exit-zero",
      "black"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}
