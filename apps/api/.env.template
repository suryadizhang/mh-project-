# =============================================================================
# MyHibachi Backend - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
PORT=8000
APP_NAME="MyHibachi Backend API"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For development - SQLite
DATABASE_URL=sqlite+aiosqlite:///./mh-bookings.db
DATABASE_URL_SYNC=sqlite:///./mh-bookings.db

# For production - PostgreSQL (replace with your actual values)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/myhibachi_prod
# DATABASE_URL_SYNC=postgresql://username:password@localhost:5432/myhibachi_prod

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your_super_secure_secret_key_replace_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# =============================================================================
# STRIPE CONFIGURATION (NEVER USE LIVE KEYS IN DEVELOPMENT!)
# =============================================================================
# Development keys (test mode)
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# Production keys - ONLY set in production environment via GitHub secrets
# STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here  
# STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# =============================================================================
# APPLICATION URLS
# =============================================================================
# Development URLs
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
WEBHOOK_PATH=/api/stripe/webhook

# Production URLs - set via GitHub secrets in CI/CD
# APP_URL=https://myhibachichef.com
# API_BASE_URL=https://mhapi.mysticdatanode.net

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000"]

# Production CORS - set via GitHub secrets
# ALLOWED_ORIGINS=["https://myhibachichef.com","https://admin.myhibachichef.com"]

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=your_email@gmail.com
EMAILS_FROM_EMAIL=no-reply@myhibachichef.com
DISABLE_EMAIL=false

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@myhibachi.com
ADMIN_PHONE=+1234567890

# Default admin credentials for initial setup
DEFAULT_ADMIN_EMAIL=admin@myhibachi.com
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
ZELLE_EMAIL=payment@myhibachi.com
ZELLE_PHONE=+1234567890
VENMO_USERNAME=@myhibachi

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_STRIPE_CONNECT=false
ENABLE_AUTOMATIC_TAX=false
ENABLE_SUBSCRIPTIONS=false
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=8001
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc_dir

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TESTING=false
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory: