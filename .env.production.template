# =============================================================================
# Production Environment Variables Template for Docker Compose
# =============================================================================
# Copy this to .env.production and set via GitHub secrets for deployment

# Application Configuration
ENVIRONMENT=production
BUILD_TARGET=production
DEBUG=false

# Database Configuration (Set via GitHub secrets)
DB_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=myhibachi_prod
POSTGRES_USER=postgres

# Security Configuration (Set via GitHub secrets)
SECRET_KEY=${SECRET_KEY}

# Stripe Configuration (Set via GitHub secrets - LIVE KEYS)
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# AI Configuration (Set via GitHub secrets)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Admin Interface Passwords (Set via GitHub secrets)
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
PGADMIN_EMAIL=${PGADMIN_EMAIL}
PGADMIN_PASSWORD=${PGADMIN_PASSWORD}

# Production Feature Flags
ENABLE_METRICS=true
ENABLE_MONITORING=true