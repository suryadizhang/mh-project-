# =============================================================================
# Akaunting Environment Configuration
# =============================================================================
# Copy to .env and fill in actual values before deployment
# Store sensitive values in Google Secret Manager for production

# =============================================================================
# Database Configuration
# =============================================================================
# Using existing PostgreSQL server, separate database
DB_HOST=localhost
AKAUNTING_DB_USER=akaunting_user
AKAUNTING_DB_PASSWORD=<YOUR_SECURE_PASSWORD>

# =============================================================================
# Application Settings
# =============================================================================
APP_URL=https://accounting.mysticdatanode.net
APP_DEBUG=false
APP_ENV=production

# =============================================================================
# Company Information (configured in UI, but documented here)
# =============================================================================
# Main Company: My Hibachi (parent)
# Sub-companies (stations):
#   - My Hibachi Austin (AUS)
#   - My Hibachi Dallas (DFW)
#   - My Hibachi Houston (HOU)
#   - My Hibachi Bay Area (CA-FREMONT-001)

# =============================================================================
# API Access (for FastAPI integration)
# =============================================================================
# After setup, create API tokens in Akaunting:
# Settings → API → Create Token
# Store in GSM as AKAUNTING_API_TOKEN
AKAUNTING_API_TOKEN=<GENERATE_AFTER_SETUP>

# =============================================================================
# Email Configuration (for invoice sending)
# =============================================================================
# Using existing Resend configuration from main stack
MAIL_MAILER=smtp
MAIL_HOST=smtp.resend.com
MAIL_PORT=587
MAIL_USERNAME=resend
MAIL_PASSWORD=<RESEND_API_KEY>
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=accounting@myhibachichef.com
MAIL_FROM_NAME="My Hibachi Accounting"

# =============================================================================
# Tax Rates (configured in UI per company)
# =============================================================================
# Texas: 8.25% (varies by city)
# California: 7.25% - 10.25% (varies by city)
