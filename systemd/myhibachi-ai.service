[Unit]
Description=MyHibachi AI API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/srv/myhibachi/ai-api
Environment="PORT=8002"
Environment="ENV=production"
ExecStart=/srv/myhibachi/ai-api/.venv/bin/gunicorn simple_backend_corrected:app -k uvicorn.workers.UvicornWorker -b 127.0.0.1:8002 --workers 2 --threads 2 --timeout 90
Restart=always

[Install]
WantedBy=multi-user.target
